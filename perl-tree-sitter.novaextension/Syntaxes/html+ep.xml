<?xml version="1.0" encoding="UTF-8"?>
<syntax name="html+ep">
	<meta>
		<name>HTML (EP)</name>
		<type>markup</type>
		<preferred-file-extension>html.ep</preferred-file-extension>
		<parent>html</parent>
	</meta>

	<detectors>
		<extension priority="1.0">html.ep,htm.ep</extension>
	</detectors>

	<tree-sitter language="mojo_template">
		<highlights path="html+ep/highlights.scm" />
		<injections path="html+ep/injections.scm" />
	</tree-sitter>
</syntax>
